extend type Query {
    containers: [Container]
}

extend type Mutation {
    createContainer(container: ContainerInput): ID
    updateContainer(oldName: String, newOne:ContainerInput): ID
    deleteContainer(name: String): ID
}

type Container {
    id: ID
    name: String
    type: String
    hostname: String
    parentId: ID
}

input ContainerInput {
    id: ID
    name: String
    type: String
    hostname: String
    parentId: ID
}